<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.payroll.controllers.DashboardController">
    
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <VBox spacing="5">
                <Label fx:id="welcomeLabel" text="Welcome" 
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                <HBox spacing="10">
                    <Label fx:id="userRoleLabel" text="Role" 
                           style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;"/>
                    <Label fx:id="dateLabel" text="Date" 
                           style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
                </HBox>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>
    
    <left>
        <VBox spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
            <Button fx:id="btnDashboard" text="Dashboard" onAction="#handleDashboard"/>
            <Button fx:id="btnEmployees" text="Employees" onAction="#handleEmployees"/>
            <Button fx:id="btnPayroll" text="Payroll" onAction="#handlePayroll"/>
            <Button fx:id="btnAttendance" text="Attendance" onAction="#handleAttendance"/>
            <Button fx:id="btnLeaves" text="Leaves" onAction="#handleLeaves"/>
            <Button fx:id="btnReports" text="Reports" onAction="#handleReports"/>
            <Button fx:id="btnSettings" text="Settings" onAction="#handleSettings"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button fx:id="btnLogout" text="Logout" onAction="#handleLogout"/>
        </VBox>
    </left>
    
    <center>
        <StackPane fx:id="contentPane"/>
    </center>
    
    <bottom>
        <FlowPane fx:id="statsContainer" style="-fx-background-color: white; -fx-padding: 10;"/>
    </bottom>
    
</BorderPane>