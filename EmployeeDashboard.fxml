<BorderPane xmlns="http://javafx.com/javafx/8" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.payroll.controllers.EmployeeDashboardController" 
           prefWidth="1366" prefHeight="768">
    
    <left>
        <!-- Sidebar -->
        <VBox fx:id="sidebarVBox" spacing="0" style="-fx-background-color: #2d3748;">
            <!-- Logo -->
            <VBox alignment="CENTER" spacing="5" style="-fx-padding: 30 20;">
                <Circle radius="30" fill="#667eea"/>
                <Label text="PayrollPro" 
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="EMPLOYEE PORTAL" 
                       style="-fx-text-fill: #a0aec0; -fx-font-size: 10px;"/>
            </VBox>
            
            <Separator style="-fx-background-color: #4a5568;"/>
            
            <!-- Navigation Menu -->
            <VBox spacing="5" style="-fx-padding: 20 0;">
                <Button fx:id="btnDashboard" text="ðŸ“Š Dashboard" onAction="#loadDashboardContent" 
                        style="-fx-background-color: transparent; -fx-text-fill: #cbd5e0; -fx-font-size: 14px; -fx-padding: 15 25; -fx-alignment: center-left;"/>
                <Button fx:id="btnProfile" text="ðŸ‘¤ Profile" onAction="#loadProfile" 
                        style="-fx-background-color: transparent; -fx-text-fill: #cbd5e0; -fx-font-size: 14px; -fx-padding: 15 25; -fx-alignment: center-left;"/>
                <Button fx:id="btnSalary" text="ðŸ’° Salary" onAction="#loadSalary" 
                        style="-fx-background-color: transparent; -fx-text-fill: #cbd5e0; -fx-font-size: 14px; -fx-padding: 15 25; -fx-alignment: center-left;"/>
                <Button fx:id="btnAttendance" text="â° Attendance" onAction="#loadAttendance" 
                        style="-fx-background-color: transparent; -fx-text-fill: #cbd5e0; -fx-font-size: 14px; -fx-padding: 15 25; -fx-alignment: center-left;"/>
                <Button fx:id="btnLeaves" text="ðŸ“… Leaves" onAction="#loadLeaves" 
                        style="-fx-background-color: transparent; -fx-text-fill: #cbd5e0; -fx-font-size: 14px; -fx-padding: 15 25; -fx-alignment: center-left;"/>
            </VBox>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- User Profile -->
            <VBox style="-fx-padding: 20; -fx-background-color: rgba(0,0,0,0.2);">
                <Label fx:id="welcomeLabel" text="Welcome" 
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="userRoleLabel" text="EMPLOYEE" 
                       style="-fx-text-fill: #a0aec0; -fx-font-size: 12px;"/>
            </VBox>
            
            <!-- Logout Button -->
            <Button fx:id="btnLogout" text="ðŸšª Logout" onAction="#handleLogout" 
                    style="-fx-background-color: #d53f8c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 0; -fx-padding: 15 20;"/>
        </VBox>
    </left>
    
    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #f8fafc;"/>
    </center>
    
    <top>
        <!-- Top Bar -->
        <HBox style="-fx-background-color: white; -fx-padding: 15 25;">
            <VBox spacing="5">
                <Label fx:id="employeeNameLabel" text="Employee Name" 
                       style="-fx-text-fill: #2d3748; -fx-font-weight: 600;"/>
                <HBox spacing="10">
                    <Label fx:id="employeeCodeLabel" text="ID: EMP001" 
                           style="-fx-text-fill: #718096; -fx-font-size: 12px;"/>
                    <Label fx:id="departmentLabel" text="Department" 
                           style="-fx-text-fill: #718096; -fx-font-size: 12px;"/>
                </HBox>
            </VBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Time Display -->
            <VBox alignment="CENTER_RIGHT" spacing="5">
                <Label fx:id="currentTimeLabel" text="Monday, January 1, 2024 â€¢ 00:00:00" 
                       style="-fx-text-fill: #2d3748; -fx-font-weight: 600;"/>
                
                <!-- Clock In/Out Section -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="btnClockIn" text="â° Clock In" 
                            style="-fx-background-color: #38a169; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"/>
                    <Button fx:id="btnClockOut" text="ðŸƒ Clock Out" 
                            style="-fx-background-color: #ed8936; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"/>
                    <Label fx:id="clockStatusLabel" text="Not clocked in" 
                           style="-fx-text-fill: #718096; -fx-font-size: 12px;"/>
                </HBox>
            </VBox>
        </HBox>
    </top>
    
</BorderPane>